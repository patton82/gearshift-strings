<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/filter_visibility">
        <CheckBoxPreference android:title="@string/menu_filters_all" android:key="filter_all" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/menu_filters_downloading" android:key="filter_downloading" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/menu_filters_seeding" android:key="filter_seeding" android:defaultValue="true" />
