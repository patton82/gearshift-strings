        <CheckBoxPreference android:title="@string/menu_filters_incomplete" android:key="filter_incomplete" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/menu_filters_active" android:key="filter_active" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/menu_filters_checking" android:key="filter_checking" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/directory_filters">
        <CheckBoxPreference android:title="@string/show_directory_filters" android:key="filter_directories" android:defaultValue="true" />
